<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <decisions>
        <description>[Decision] Is the Aria Company Eurostar or Thalys</description>
        <name>Is_Aria_Company_ES_or_TH</name>
        <label>Is Aria Company ES or TH?</label>
        <locationX>606</locationX>
        <locationY>333</locationY>
        <defaultConnector>
            <targetReference>Update_Non_UK_Checkbox_If_Thalys_or_Eurostar</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Yes</defaultConnectorLabel>
        <rules>
            <name>Non_ES_TH</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Aria_Company__pc</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Eurostar</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Aria_Company__pc</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Thalys</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Remove_Non_UK_Value</targetReference>
            </connector>
            <label>Non ES &amp; TH</label>
        </rules>
    </decisions>
    <description>Update Non UK Checkbox If Thalys or Eurostar</description>
    <environments>Default</environments>
    <interviewLabel>Update NonUK Checkbox If Thalys or Eurostar {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Update NonUK Checkbox If Thalys or Eurostar</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
