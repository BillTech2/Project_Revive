        <label>Set Tier Renewal Outcome to Remained</label>
        <locationX>242</locationX>
        <locationY>492</locationY>
        <connector>
            <targetReference>Create_Loyalty_Tier_History_Record</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>Get_Member_Tier.Id</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>RenewalTierOutcome__c</field>
            <value>
                <elementReference>fRenewalOutcomeRemained</elementReference>
            </value>
        </inputAssignments>
        <object>LoyaltyMemberTier</object>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <filterFormula>ISCHANGED({!$Record.NextResetDate})</filterFormula>
        <object>LoyaltyMemberCurrency</object>
        <recordTriggerType>Update</recordTriggerType>
        <scheduledPaths>
            <name>Wait_until_Tier_Downgrade_Processing_takes_place</name>
            <connector>
                <targetReference>Get_Member_Tier</targetReference>
            </connector>
            <label>Wait until Tier Downgrade/Processing takes place</label>
            <offsetNumber>10</offsetNumber>
            <offsetUnit>Minutes</offsetUnit>
            <recordField>LastModifiedDate</recordField>
            <timeSource>RecordField</timeSource>
        </scheduledPaths>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
