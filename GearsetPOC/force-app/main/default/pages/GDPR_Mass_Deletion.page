<apex:page standardController="Account" recordSetVar="Accounts" extensions="GDPR_Mass_Deletion_Controller" lightningStyleSheets="true">
   
     <apex:form >
         <apex:slds /> 
      <apex:sectionHeader title="Upload data from CSV file"/>
      <apex:pagemessages />
      <apex:pageBlock >
             <!--  Component to allow user to upload file from local machine -->
             <center>
              <apex:inputFile value="{!contentFile}" filename="{!nameFile}" /> 
              <apex:commandButton action="{!ReadFile}" value="Upload File" id="theButton" onclick="if(!confirm('Are you sure?')){return false;}"/>
             </center>  

      </apex:pageBlock>       
   </apex:form>   


</apex:page>