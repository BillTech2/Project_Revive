    <script>
        $(".dropdown").hover(function() {
            $(".dropdown .dropdown-menu").toggle();
        });
        if ($(window).width() <= 767) {
            var x = $(".menu .dropdown-menu").clone();
            $(".collapse").append(x);
            $("li.dropdown").click(function() {
                $(".collapse .dropdown-menu:last-of-type").toggle();
            });
        }
        $('[data-toggle="tooltip"]').tooltip();
    </script>
