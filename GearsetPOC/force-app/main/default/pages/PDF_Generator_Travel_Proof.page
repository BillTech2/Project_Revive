<apex:page showHeader="false" sidebar="false" standardController="Case" extensions="PDF_Generator_Travel_Proof_Ctrl" renderAs="PDF" applyHtmlTag="false" applyBodyTag="false" language="{!language}">
    <head>
        <style>
            @page{size: A4 portrait;}
            body {font-family: 'Arial Unicode MS';}
            td{border:1px solid #000; padding:3px;}
            th{border:1px solid #000; padding:3px; text-decoration:none!important; color:#000; background-color:#E8E2EF; }
            table{text-align:right; margin: 0 auto; width:100%} 

            a{text-decoration:none !important; color:#000;}

            div[id*="contentBlock"] .pbHeader, div[id*="contentBlock"] .pbBottomButtons {
                display:none;
            }
            .caseInfos {
                color:#444;
                width:100%;
                text-align:middle;
                font-size:16px;
            }
            h1 {
                font-size:25px;
                color:#000;
            }
            h2 {
                margin-bottom:0px;
                font-size:14px;
                color:#000;
            }
            h3 {
                margin-bottom:30px;
                font-size:14px;
                color:#000;
            }
            h4 {
                margin-bottom:50px;
                font-size:16px;
                color:#000;
            }
            table tr td {
                border: none;
                align: left;
            }
            td {
                width : 360px;
                text-align: left;
                padding-left: 140px;
            }
            .infos {
                font-size: 1em;
            }
        </style>
    </head>
    <header>
        <apex:image id="theImage" url="{!$Resource.Eurostar_Logo_Blue}" width="240" height="55" alt="Description of image here"/>
    </header>
    <apex:outputText >
        <h1>{!$Label.PDF_Webform_RF_Justif}</h1>
    </apex:outputText>

    <apex:outputText rendered="{!IF(caseRecord.Preferred_Language__c == 'EN', true, false)}" value="{!$Label.PDF_Edited_on} {0,date,MM'/'dd'/'yyyy}">
        <apex:param value="{!TODAY()}" /> 
    </apex:outputText>
    <apex:outputText rendered="{!IF(caseRecord.Preferred_Language__c != 'EN', true, false)}" value="{!$Label.PDF_Edited_on} {0,date,dd'/'MM'/'yyyy}">
        <apex:param value="{!TODAY()}" /> 
    </apex:outputText>

    <h4>{!$Label.PDF_Please_find_below_the_information_regarding_your_journey_with_Eurostar}</h4>

    <table id="tableId" class="infos" style="margin-left: -120px;">
        <tr>
            <td>{!$Label.PDF_Family_Name}</td>
            <td><apex:outputfield value="{!caseRecord.Account.LastName}"/></td>
        </tr>
        <tr>
            <td>{!$Label.PDF_First_name}</td>
            <td><apex:outputfield value="{!caseRecord.Account.FirstName}"/></td>
        </tr>
        <tr>
            <td>{!$Label.PDF_Travel_date}</td>
            <td><apex:outputfield value="{!caseRecord.TCN__r.Travel_DateTime__c}"/></td>
        </tr>
        <tr>
            <td>{!$Label.PDF_Departure}</td>
            <td><apex:outputfield value="{!caseRecord.TCN__r.Origin__c}"/></td>
        </tr>
        <tr>
            <td>{!$Label.PDF_Arrival}</td>
            <td><apex:outputfield value="{!caseRecord.TCN__r.Destination__c}"/></td>
        </tr>
        <tr >
            <apex:outputText rendered="{!isCancelled}">
                <td>{!$Label.PDF_Cancellation}</td>
                <td><apex:image value="{!$Resource.checkbox_checked}"/></td>
            </apex:outputText>
        </tr>
        <tr>
            <apex:outputText rendered="{!isDelay}">
                <td>{!$Label.PDF_Delay}</td>
                <td>{!delayInMinutes} minutes</td>
            </apex:outputText>
        </tr>
        <tr>
            <td>{!$Label.PDF_Train_number}</td>
            <td><apex:outputfield value="{!caseRecord.Train__r.Train_Number__c}"/></td>
        </tr>
        <tr>
            <td>{!$Label.PDF_Booking_reference}</td>
            <td><apex:outputfield value="{!caseRecord.PNR__c}"/></td>
        </tr>
    </table>

    <p>
        {!$Label.PDF_This_document_cannot_be_used_as_a_transport_ticket}
    </p>
</apex:page>