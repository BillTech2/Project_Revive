<apex:page showHeader="false" sidebar="false" language="{!selectedLanguageCode}" controller="CompApp_CtrlGroupBooking" standardStylesheets="false" applyHtmlTag="false" applyBodyTag="false">
<style>
            #app-root button.btn.primary {
            height: 50px;
        }
</style>
    
        <div id="group-booking-wrapper">

            <h1 class="row">{!$label.CompApp_Groups_Booking_Enquiry}</h1>
            <div class="row p1">{!$label.CompApp_Group_Details_TopParagraph}</div>

            <div class="row p1">{!$label.CompApp_required_fields}</div>

            <h2 class="row">{!$label.CompApp_Group_details}</h2>
            
            <div class="row {{formManager.titleValdity | validityClass}}">
                <label for="title" class="cell-label">{!$label.CompApp_Title}</label>
                <div class="input-wrapper validity-sign cell-input">
                    <input 
                        placeholder="{!$label.CompApp_Traveller_Title}" 
                        id="title"
                        ng-pattern="/^[a-zA-Z\s\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]{1,80}.{0,1}$/"
                        ng-keyup="formManager.titleValdity = !! $angularState.groupBookingInfo.title"
                        ng-model="$angularState.groupBookingInfo.title"
                    /> 
                    <div class="error-message">{!$label.CompApp_enterTitle}</div>
                </div>
            </div>
            
            <div class="row {{formManager.firstNameValdity | validityClass}}">
                <label for="first-name" class="cell-label">{!$label.CompApp_First_name}</label>
                <div class="input-wrapper validity-sign cell-input">
                    <input 
                        placeholder="{!$label.CompApp_Traveller_First_Name}" 
                        id="first-name"
                        ng-pattern="/^[a-zA-Z\s\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]{1,80}$/"
                        ng-keyup="formManager.firstNameValdity = !! $angularState.groupBookingInfo.firstName"
                        ng-model="$angularState.groupBookingInfo.firstName"
                    /> 
                    <div class="error-message">{!$label.CompApp_enterFirstNameGroupBooking}</div>
                </div>
            </div>

            <div class="row {{formManager.lastNameValdity | validityClass}}">
                <label for="last-name" class="cell-label">{!$label.CompApp_Last_Name}</label>
                <div class="input-wrapper validity-sign cell-input">
                    <input 
                        placeholder="{!$label.CompApp_Traveller_Last_Name}" 
                        id="last-name"
                        ng-pattern="/^[a-zA-Z\s\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]{1,80}$/"
                        ng-keyup="formManager.lastNameValdity = !! $angularState.groupBookingInfo.lastName" 
                        ng-model="$angularState.groupBookingInfo.lastName"
                    />
                    <div class="error-message">{!$label.CompApp_enterLastNameGroupBooking}</div>
                </div>
            </div>

            <div class="row {{formManager.addressLine1Valdity | validityClass}}">
                <label for="address-Line1" class="cell-label">{!$label.CompApp_Address_Line1}</label>
                <div class="input-wrapper validity-sign cell-input">
                    <input 
                        placeholder="{!$label.CompApp_Traveller_Address_Line1}" 
                        id="address-Line1"
                        ng-keyup="formManager.addressLine1Valdity = !! $angularState.groupBookingInfo.addressLine1" 
                        ng-model="$angularState.groupBookingInfo.addressLine1"
                    /> 
                    <div class="error-message">{!$label.CompApp_enterAddress}</div>
                </div>
            </div>

            <div class="row {{formManager.addressLine2Valdity | validityClass}}">
                <label for="address-Line2" class="cell-label">{!$label.CompApp_Address_Line2}</label>
                <div class="input-wrapper validity-sign cell-input">
                    <input 
                        placeholder="{!$label.CompApp_Traveller_Address_Line2}" 
                        id="address-Line2"
                        ng-model="$angularState.groupBookingInfo.addressLine2"
                    /> 
                    <div class="error-message">{!$label.CompApp_enterAddress}</div>
                </div>
            </div>
            
            <div class="row {{formManager.townCityValdity | validityClass}}">
                <label for="town-City" class="cell-label">{!$label.CompApp_Town_City}</label>
                <div class="input-wrapper validity-sign cell-input">
                    <input 
                        placeholder="{!$label.CompApp_Traveller_Town_City}" 
                        id="town-City"
                        ng-keyup="formManager.townCityValdity = !! $angularState.groupBookingInfo.townCity" 
                        ng-model="$angularState.groupBookingInfo.townCity"
                    /> 
                    <div class="error-message">{!$label.CompApp_enterTownCity}</div>
                </div>
            </div>
            
            <div class="row {{formManager.countyStateRegionValdity | validityClass}}">
                <label for="county-State-Region" class="cell-label">{!$label.CompApp_County_State_Region}</label>
                <div class="input-wrapper validity-sign cell-input">
                    <input 
                        placeholder="{!$label.CompApp_Traveller_Country_State_Region}" 
                        id="county-State-Region"
                        ng-keyup="formManager.countyStateRegionValdity = !! $angularState.groupBookingInfo.countyStateRegion"
                        ng-model="$angularState.groupBookingInfo.countyStateRegion"
                    /> 
                    <div class="error-message">{!$label.CompApp_enterCountryStateRegion}</div>
                </div>
            </div>
            
            <div class="row {{formManager.postcodeZipCodeValdity | validityClass}}">
                <label for="postcode-ZipCode" class="cell-label">{!$label.CompApp_Postcode_ZipCode}</label>
                <div class="input-wrapper validity-sign cell-input">
                    <input 
                        placeholder="{!$label.CompApp_Traveller_Postcode_ZipCode}" 
                        id="postcode-ZipCode"
                        ng-keyup="formManager.postcodeZipCodeValdity = !! $angularState.groupBookingInfo.postcodeZipCode"
                        ng-pattern="/^[0-9\sA-Za-z]{4,}$/"
                        ng-model="$angularState.groupBookingInfo.postcodeZipCode"
                    /> 
                    <div class="error-message">{!$label.CompApp_enterZipCode}</div>
                </div>
            </div>
            
            <div class="row {{formManager.countryValidity | validityClass}}">
                <label for="country" class="cell-label">{!$label.CompApp_Country}</label>
                <div class="input-wrapper validity-sign cell-input">
                    <input 
                        placeholder="{!$label.CompApp_Traveller_Country}" 
                        id="country"
                        ng-keyup="formManager.countryValidity = !! $angularState.groupBookingInfo.country"
                        ng-pattern="USER_NAME_REGEX"
                        ng-model="$angularState.groupBookingInfo.country"
                    /> 
                    <div class="error-message">{!$label.CompApp_enterCountry}</div>
                </div>
            </div>
            
            <div class="row {{formManager.emailValdity | validityClass}}">
                <label for="email" class="cell-label">{!$label.CompApp_email}</label>
                <div class="input-wrapper validity-sign cell-input">
                    <input type="email"
                        placeholder="{!$label.CompApp_Traveller_Email}" 
                        id="email"
                        ng-keyup="formManager.emailValdity = isPrimaryEmailValid()" 
                        ng-model="$angularState.groupBookingInfo.email"
                    /> 
                    <div class="error-message">{!$label.CompApp_enterEmailGroupBooking}</div>
                </div>
            </div>
            
            <div class="row {{formManager.contactNumberValdity | validityClass}}">
                <label for="contact-Number" class="cell-label">{!$label.CompApp_Contact_Number}</label>
                <div class="input-wrapper validity-sign cell-input">
                    <input 
                        placeholder="{!$label.CompApp_Traveller_Contact_Number}" 
                        id="contact-Number"
                        ng-keyup="formManager.contactNumberValdity = !! $angularState.groupBookingInfo.contactNumber"
                        ng-pattern="/^[0-9 ]{10,20}$/"
                        ng-model="$angularState.groupBookingInfo.contactNumber"
                    /> 
                    <div class="error-message">{!$label.CompApp_enterContactNumber}</div>
                </div>
            </div>

            <div class="row {{ formManager.captchaValdity | validityClass }}">
                <label for="recaptcha" class="cell-label" >{!$label.CompApp_robot_question}</label>
                <div class="cell-input">
                    <no-captcha
                            g-recaptcha-response="captchaResponse"
                            theme='light'
                            control="noCaptchaControl"
                            site-key="{!GOOGLE_CAPTCHA_SITE_KEY}"
                    >
                    </no-captcha>
                    <div class="error-message">{!$label.CompApp_Validate_not_robot}</div>
                </div>
            </div>
            
            <div class="row commands-section">
                <button class="btn primary" ng-click="submitGroupBookingRequest();">{!$label.CompApp_Send_Mesage}</button>
                <p style="color: red !important;" ng-hide="formManager.noErrors">{!$label.CompApp_incorrectDataGB}</p>
            </div>

            <script>
                var GLOBAL_REMOTE_USER_IP = '{!USER_IP}';
            </script>
        </div>
        

        
</apex:page>