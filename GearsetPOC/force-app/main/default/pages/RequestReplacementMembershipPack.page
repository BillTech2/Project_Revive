<apex:page id="RequestReplacementMembershipPack"
			showHeader="true"
			sidebar="true"
			tabStyle="SalesforceMember__x"
			standardController="SalesforceMember__x"
			extensions="ReplacementMembershipPackController">

	<apex:sectionHeader title="Request Replacement Membership Pack Edit" subtitle="New Request Replacement Membership Pack" />
	<apex:form >
		<apex:pageBlock title="Request Replacement Membership Pack Edit" mode="edit">
			<apex:pageMessages />
			<apex:pageBlockSection columns="1" >
				<apex:selectList value="{!selectedReason}" label="Reason" size="1" required="true">
					<apex:selectOptions value="{!reasons}"/>
				</apex:selectList>
				<apex:inputText value="{!reasonText}" label="Reason text" />
			</apex:pageBlockSection>
			<apex:pageBlockButtons >
				<apex:commandButton action="{!save}" value=" Save "/>
				<apex:commandButton action="{!cancel}" value="Cancel"/>
			</apex:pageBlockButtons>
		</apex:pageBlock>
	</apex:form>
</apex:page>