             function getRequiredFields() {
             
            var isVAT = document.getElementById('{!$Component.form.Block3.Section16.item16_2.isVAT}').value;
            if (isVAT == 'Yes') {
                document.getElementById('{!$Component.form.Block3.Section17.item17_2.vatregnoLbl}').disabled = false;
                document.getElementById('{!$Component.form.Block3.Section17.item17_2.vatregnoVal}').disabled = false;
