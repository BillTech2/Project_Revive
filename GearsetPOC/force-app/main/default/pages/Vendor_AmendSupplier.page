                document.getElementById('{!$Component.form.Block3.Section17.item17_1.vatexempt}').value = '';

            } else if (isVAT == 'No') {
                document.getElementById('{!$Component.form.Block3.Section17.item17_2.vatregnoLbl}').disabled = true;
                document.getElementById('{!$Component.form.Block3.Section17.item17_2.vatregnoVal}').disabled = true;
                document.getElementById('{!$Component.form.Block3.Section17.item17_1.vatexempt}').disabled = true;
                document.getElementById('{!$Component.form.Block3.Section17.item17_1.vatexemptLbl}').disabled = true;
                
