<apex:page Controller="mc_article_financial_controller" language="{!mc_LanguageISO}" showHeader="false" sidebar="false" standardStylesheets="false" docType="html-5.0" applyHtmlTag="false" >
 
<link REL="SHORTCUT ICON" HREF="https://static.eurostar.com/ui/design-system/favicon.png"/>

<html>
<head>
    <meta charset="utf-8"/>
    <title>Eurostar Media-Centre</title>
   <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
   <c:mc_styles ></c:mc_styles>
</head>
<body>
    <!-- header starts -->
    <apex:outputpanel rendered="{!language==null}">
        <c:mc_header_es lang="United Kingdom"></c:mc_header_es>
    </apex:outputpanel>
    <apex:outputpanel rendered="{!language!=null && CONTAINS(language,'en')}">
        <c:mc_header_es lang="United Kingdom"></c:mc_header_es>
    </apex:outputpanel>
    <apex:outputpanel rendered="{!language!=null && CONTAINS(language,'fr')}">
        <c:mc_header_fr lang="FranÃ§ais"></c:mc_header_fr>         
    </apex:outputpanel>
    <apex:outputpanel rendered="{!language!=null && CONTAINS(language,'nl')}">
        <c:mc_header_nl lang="Nederland"></c:mc_header_nl>                            
    </apex:outputpanel>
    <!-- header ends -->
    <!-- searchbar starts -->
    
    <!-- searchbar ends -->
    <!-- content wrapper starts -->
    <div class="row">
        <div class="container content">
              <!-- search row -->
        <div>
            <span>
                <ul class="search-ul">
                     <li><a href="{!$Site.BaseUrl}/mc_news?language={!language}" >{!$Label.mc_news}</a></li>
                     <li><a href="{!$Site.BaseUrl}/mc_financial?language={!language}" class = "selected">{!$Label.mc_financial_result}</a></li>
                     <li><a href="{!$Site.BaseUrl}/mc_contact?language={!language}">{!$Label.mc_contact}</a></li>
                     <!--<li><a href="http://www.eurostar.com/uk-en/about-eurostar" target="_blank">About</a></li>-->
                     <li><a href="http://www.eurostar.com/{!language}/{!$Label.mc_aboutsite}" target="_blank">{!$Label.mc_about_result}</a></li>
                </ul>
                <div class="search-buttons">
                    <button class="form-control search-btn">{!$Label.mc_search}</button>
                    <input class="form-control" height="50" placeholder="{!$Label.mc_search}" type="text" width="25"/>
                </div>
                <div class="clear"></div>
            </span>
        </div>  
            <!-- /search row -->
            <!-- content starts -->
            <div class="row inside financial">
                <!-- top banner with image and title -->
                <div class="row top-banner">
                    <div class="images">
                        <apex:outputpanel rendered="{!language==null}">
                            <img src="{!URLFOR($Resource.mc_financial_header, 'Press-centre-financial.jpg')}" alt="financial-result-page-eurostar" class="hidden-xs"/>
                        </apex:outputpanel>
                        <apex:outputpanel rendered="{!language!=null && CONTAINS(language,'en')}">
                            <img src="{!URLFOR($Resource.mc_financial_header, 'Press-centre-financial.jpg')}" alt="financial-result-page-eurostar" class="hidden-xs" />
                        </apex:outputpanel>
                        <apex:outputpanel rendered="{!language!=null && CONTAINS(language,'fr')}">
                            <img src="{!URLFOR($Resource.mc_financial_header, 'Press-centre-financialFR.jpg')}" alt="financial-result-page-eurostar" class="hidden-xs" />          
                        </apex:outputpanel>
                        <apex:outputpanel rendered="{!language!=null && CONTAINS(language,'nl')}">
                            <img src="{!URLFOR($Resource.mc_financial_header, 'Press-centre-financialBE.jpg')}" alt="financial-result-page-eurostar" class="hidden-xs" />                            
                        </apex:outputpanel>
                        <apex:outputpanel rendered="{!language!=null && CONTAINS(language,'de')}">
                            <img src="{!URLFOR($Resource.mc_financial_header, 'Press-centre-financialDE.jpg')}" alt="financial-result-page-eurostar" class="hidden-xs" />                            
                        </apex:outputpanel>
                        <h1>Financial results</h1>
                        <p>Below you will find our latest financial press releases, issued every quarter. </p>
                    </div>
                </div>
                <!-- content specific for financial -->
                <div>
                <div class="row inner finance">
                    <apex:repeat value="{!mc_news}" var="mc_news_arti" id="theRepeat">
                <div class="row news-list">
                        
                            
                            
                               
                               <div class="col-sm-12 description">
                                    <h4><a href="{!$Site.BaseUrl}/mc_view?language={!language}&article_Id={!mc_news_arti.Id}">{!mc_news_arti.title}</a></h4>
                                    <p class="date">
                                  <apex:outputText value="{0, date, d MMMM   yyyy}" >
                                      <apex:param value="{!IF(mc_news_arti.Media_Centre_OriginalPublishDate__c == NULL ,mc_news_arti.FirstPublishedDate, mc_news_arti.Media_Centre_OriginalPublishDate__c)}" />
                                  </apex:outputText></p>
                                    <p class="paragraph">
                                        <apex:outputText escape="false"  value="{!mc_news_arti.Summary}"></apex:outputText>
                                    </p>
                                </div>
                           
                        
                       
                    </div>
                    </apex:repeat>
                    <!-- news item ends -->
                </div>
                </div>
                <!-- end content specific for financial -->

            </div>
            <!-- content ends -->

        </div>
    </div>
    <!-- content wrapper ends -->

   <!-- footer starts -->
    <apex:outputpanel rendered="{!mc_LanguageISO==null}">
        <c:mc_footer ></c:mc_footer> 
    </apex:outputpanel>
    <apex:outputpanel rendered="{!mc_LanguageISO!=null && CONTAINS(mc_LanguageISO,'en')}">
        <c:mc_footer ></c:mc_footer> 
    </apex:outputpanel>
    <apex:outputpanel rendered="{!mc_LanguageISO!=null && CONTAINS(mc_LanguageISO,'fr')}">
        <c:mc_footer_fr ></c:mc_footer_fr>           
    </apex:outputpanel>
    <apex:outputpanel rendered="{!mc_LanguageISO!=null && CONTAINS(mc_LanguageISO,'nl')}">
        <c:mc_footer_nl ></c:mc_footer_nl>                            
    </apex:outputpanel>  
 
    <!-- footer ends -->


    <script src="https://code.jquery.com/jquery-2.1.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script>
        $(".dropdown").hover(function() {
            $(".dropdown .dropdown-menu").toggle();
        });
        if ($(window).width() <= 767) {
            var x = $(".menu .dropdown-menu").clone();
            $(".collapse").append(x);
            $("li.dropdown").click(function() {
                $(".collapse .dropdown-menu:last-of-type").toggle();
            });
        }
    </script>
</body>
</html>
</apex:page>