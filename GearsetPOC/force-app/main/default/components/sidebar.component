                            <apex:outputpanel rendered="{!chosenLanguageISO!=null && CONTAINS(chosenLanguageISO,'en')}">
                                <apex:variable value="/faq/{!chosenLanguageISO}/question/{!article.urlname}" var="friendlyURL"/>
