                            <apex:outputpanel rendered="{!chosenLanguageISO!=null && CONTAINS(chosenLanguageISO,'fr')}">
                                <apex:variable value="/faq/{!chosenLanguageISO}/question/{!article.urlname}" var="friendlyURL"/>
                            </apex:outputpanel>
                            <apex:outputpanel rendered="{!chosenLanguageISO!=null && CONTAINS(chosenLanguageISO,'nl')}">
                                <apex:variable value="/faq/{!chosenLanguageISO}/vraag/{!article.urlname}" var="friendlyURL"/>
                            </apex:outputpanel>         
                            <apex:outputpanel rendered="{!chosenLanguageISO!=null && CONTAINS(chosenLanguageISO,'de')}">
                                <apex:variable value="/faq/{!chosenLanguageISO}/frage/{!article.urlname}" var="friendlyURL"/>
                            </apex:outputpanel>  
         <a href="{!friendlyURL}" class="list-group-item"><p style="margin-bottom:0; font-size:16px;">{!article.title}</p></a>
                  
     </apex:repeat>
