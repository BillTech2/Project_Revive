<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Booking_cannot_be_held_within_24_hours</fullName>
    <active>true</active>
    <errorConditionFormula>ISNEW()
&amp;&amp;
(Departure_Date__c  = (TODAY()+1)
||
 Departure_Date__c  = TODAY())</errorConditionFormula>
    <errorMessage>Booking cannot be held within 24 hours of travel</errorMessage>
</ValidationRule>
