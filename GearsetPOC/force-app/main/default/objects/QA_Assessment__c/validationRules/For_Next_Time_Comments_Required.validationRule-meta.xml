<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>For_Next_Time_Comments_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL( Status__c, &#39;CLOSED&#39;),
ISBLANK( Additional_Comments_Rich__c)
)</errorConditionFormula>
    <errorDisplayField>Additional_Comments_Rich__c</errorDisplayField>
    <errorMessage>For Next Time comments required to close this record.</errorMessage>
</ValidationRule>
