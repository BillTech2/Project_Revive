<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mandatory_manager_for_advisors</fullName>
    <active>true</active>
    <errorConditionFormula>CONTAINS(UserRole.Name, &quot;Advisor&quot;) &amp;&amp; ISBLANK(ManagerId) &amp;&amp;  IsActive == TRUE</errorConditionFormula>
    <errorDisplayField>ManagerId</errorDisplayField>
    <errorMessage>Every advisor needs to have a manager.</errorMessage>
</ValidationRule>
