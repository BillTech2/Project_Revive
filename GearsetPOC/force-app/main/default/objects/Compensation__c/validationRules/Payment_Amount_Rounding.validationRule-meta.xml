<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Payment_Amount_Rounding</fullName>
    <active>true</active>
    <description>Payment amount must be .00 or .50</description>
    <errorConditionFormula>IF(RecordType.Name = &quot;Voucher&quot; &amp;&amp; ISNEW(), (FLOOR(Payment_Amount__c) &lt;&gt; Payment_Amount__c) &amp;&amp; ((FLOOR(Payment_Amount__c) + 0.5) &lt;&gt; Payment_Amount__c), False)</errorConditionFormula>
    <errorMessage>Payment amount must be .00 or .50</errorMessage>
</ValidationRule>
