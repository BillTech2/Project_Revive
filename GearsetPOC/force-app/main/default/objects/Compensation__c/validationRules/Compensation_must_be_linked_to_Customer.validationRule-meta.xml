<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Compensation_must_be_linked_to_Customer</fullName>
    <active>true</active>
    <errorConditionFormula>ISBLANK(CustomerC__r.Customer_Email__c) &amp;&amp; RecordType.DeveloperName &lt;&gt; &#39;Online&#39; &amp;&amp; ISNEW()&amp;&amp; NOT(ISPICKVAL(Claim_Status__c, &#39;Draft&#39;))&amp;&amp; NOT(ISPICKVAL(Claim_Status__c, &#39;Cancelled&#39;))</errorConditionFormula>
    <errorDisplayField>CustomerC__c</errorDisplayField>
    <errorMessage>Compensation must be linked to customer and must have Email</errorMessage>
</ValidationRule>
