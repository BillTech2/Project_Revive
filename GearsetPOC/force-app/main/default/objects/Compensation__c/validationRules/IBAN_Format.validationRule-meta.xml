<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>IBAN_Format</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(
ISBLANK(IBAN_Account_Number__c) ||
REGEX(IBAN_Account_Number__c,&quot;[A-Z0-9]+&quot;)
)</errorConditionFormula>
    <errorDisplayField>IBAN_Account_Number__c</errorDisplayField>
    <errorMessage>IBAN must only contain UPPER CASE letters and digits.</errorMessage>
</ValidationRule>
