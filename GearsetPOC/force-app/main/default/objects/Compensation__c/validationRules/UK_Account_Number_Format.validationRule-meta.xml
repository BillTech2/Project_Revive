<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>UK_Account_Number_Format</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(
ISBLANK(Bank_Account_Number__c) ||
REGEX(Bank_Account_Number__c, &quot;[0-9]{8}&quot;)
)</errorConditionFormula>
    <errorDisplayField>Bank_Account_Number__c</errorDisplayField>
    <errorMessage>Account Number must be 8-digits.</errorMessage>
</ValidationRule>
