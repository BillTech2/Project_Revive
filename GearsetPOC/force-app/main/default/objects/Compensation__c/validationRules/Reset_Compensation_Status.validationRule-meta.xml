<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Reset_Compensation_Status</fullName>
    <active>true</active>
    <description>Only allow if Integration Status &lt;&gt; &#39;Success&#39;</description>
    <errorConditionFormula>AND(ISPICKVAL(Integration_Status__c,&#39;Not Claimed&#39;),ISPICKVAL(PRIORVALUE(Integration_Status__c),&#39;Success&#39;),  NOT(ISPICKVAL(Claim_Status__c, &#39;Draft&#39;)),
NOT(ISPICKVAL(Claim_Status__c, &#39;Cancelled&#39;))
)</errorConditionFormula>
    <errorDisplayField>Reset_Compensation__c</errorDisplayField>
    <errorMessage>Status cannot be reset as integration status already &#39;Success&#39;</errorMessage>
</ValidationRule>
