<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>New_Record_Must_Have_New_Status</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISNEW(),  NOT(ISPICKVAL(Status__c, &apos;New&apos;)) )</errorConditionFormula>
    <errorDisplayField>Status__c</errorDisplayField>
    <errorMessage>New record must have status &apos;New&apos;</errorMessage>
</ValidationRule>
