<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Dynamic_Package_Disruption_PNR</fullName>
    <active>true</active>
    <description>When Type of contact is Disruption on the Dynamic Package Record Type a PNR must be entered</description>
    <errorConditionFormula>AND(
ISBLANK(PNR__c),
TEXT(Reason_For_Contact_Dynamic_Package__c) = &quot;Disruption&quot;,
TEXT(Status) = &quot;Closed&quot;
)</errorConditionFormula>
    <errorDisplayField>PNR__c</errorDisplayField>
    <errorMessage>Please Enter a PNR</errorMessage>
</ValidationRule>
